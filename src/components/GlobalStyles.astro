<style is:global>
  @tailwind utilities;
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: Barlow, serif;
  }

  body {
    color: #2c2c2c;
  }

  a {
    @apply text-[#747579] hover:text-[#006ab3];
  }
  @layer utilities {
    .animate-spin {
      animation: spin 2s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }
  }
</style>
