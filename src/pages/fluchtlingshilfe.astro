---
// @ts-ignore
import { Icon } from "astro-icon/components"

import MainLayout from "../layouts/MainLayout.astro"
---

<MainLayout title="Sprechstunden">
    <div class="max-w-6xl mx-auto px-4 py-12 space-y-8">
        <!-- Hero Section -->
        <div class="text-center mb-12 py-12">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">
                Kostenlose Sprechstunden
            </h1>
            <p class="text-xl text-gray-600">
                Seit 2016 unterstützen wir migrantische Menschen
            </p>
        </div>

        <!-- Main Content -->
        <div class="grid md:grid-cols-2 gap-8 mb-12 py-12">
            <div class="space-y-6">
                <p class="text-lg text-gray-700 leading-relaxed">
                    Unsere ehrenamtliche Mitarbeiter stehen Ihnen gerne zur
                    Verfügung und unterstützen Sie in verschiedenen Bereichen
                    des alltäglichen Lebens.
                </p>

                <!-- Zeit Card -->
                <div class="bg-blue-50 rounded-lg p-6">
                    <div class="mb-4">
                        <div
                            class="flex items-center gap-2 text-xl font-semibold"
                        >
                            <Icon
                                name="clock"
                                class="w-8 h-8 font-bold text-blue-600"
                            />
                            Öffnungszeiten
                        </div>
                    </div>
                    <div>
                        <p class="text-lg font-medium">
                            Dienstags und Donnerstags
                            <br />
                            11:00 - 14:00 Uhr
                        </p>
                    </div>
                </div>
            </div>

            <!-- Services Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="border rounded-lg p-6">
                    <div class="flex flex-col items-center text-center">
                        <Icon
                            name="fileText"
                            class="w-12 h-12 text-blue-600 mb-2"
                        />
                        <h3 class="font-medium">Anträge ausfüllen</h3>
                    </div>
                </div>

                <div class="border rounded-lg p-6">
                    <div class="flex flex-col items-center text-center">
                        <Icon
                            name="building"
                            class="w-12 h-12 text-blue-600 mb-2"
                        />
                        <h3 class="font-medium">Behördenkommunikation</h3>
                    </div>
                </div>

                <div class="border rounded-lg p-6">
                    <div class="flex flex-col items-center text-center">
                        <Icon
                            name="school"
                            class="w-12 h-12 text-blue-600 mb-2"
                        />
                        <h3 class="font-medium">Schulangelegenheiten</h3>
                    </div>
                </div>

                <div class="border rounded-lg p-6">
                    <div class="flex flex-col items-center text-center">
                        <Icon
                            name="users"
                            class="w-12 h-12 text-blue-600 mb-2"
                        />
                        <h3 class="font-medium">Persönliche Beratung</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Info Section -->
        <div class="bg-gray-50 rounded-lg p-6 text-center py-12">
            <Icon
                name="calendar"
                class="w-20 h-20 text-blue-600 mx-auto mb-4"
            />
            <p class="text-lg font-medium text-gray-800 mb-2">
                Keine Terminvereinbarung erforderlich
            </p>
            <p class="text-gray-600">
                Kommen Sie einfach während unserer Öffnungszeiten vorbei
            </p>
        </div>
    </div>
</MainLayout>
