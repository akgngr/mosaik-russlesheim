---
import MainLayout from "../layouts/MainLayout.astro"
---

<MainLayout title="Spenden">
  <!-- Header -->
  <section
    class="bg-[#cee2ef] text-gray-800 py-6 min-h-[30vh] flex items-center"
  >
    <div class="w-11/12 md:w-10/12 mx-auto px-0 md:px-4">
      <div class="flex items-center justify-between">
        <div class="w-10/12 pr-4">
          <h1 class="text-3xl font-bold">Mosaik Dialog und Kultur</h1>
          <p class="mt-2 text-xl">
            Gemeinsam für Bildung, Toleranz und Frieden
          </p>
          <p class="text-base text-gray-700 pt-4">
            Mosaik Dialog und Kultur ist ein eingetragener gemeinnütziger Verein
            in Rüsselsheim. Wir konzentrieren uns auf Bildung, Jugendprogramme,
            kulturelles Zusammenleben und Flüchtlingsunterstützung.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Donation Section -->
  <section id="donate" class="py-12 bg-slate-50">
    <div class="w-11/12 md:w-10/12 mx-auto px-0 md:px-4">
      <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold mb-12 text-center">
          Unterstützen Sie uns
        </h2>

        <!-- PayPal Button -->
        <div class="text-center mb-12">
          <a
            href="https://paypal.me/#"
            class="bg-[#006ab3] text-white hover:text-[#006ab3] hover:bg-white border-4 border-[#006ab3] rounded-xl uppercase font-semibold px-4 py-4 focus:outline-none focus:ring-2 focus:ring-gray-700 focus:ring-opacity-75 hover:duration-700"
          >
            Mit PayPal spenden
          </a>
        </div>

        <!-- Bank Account Information -->
        <div class="space-y-4">
          <h3 class="text-xl font-semibold">Bankverbindung</h3>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="mb-2">
              <strong>Kontoinhaber:</strong> Mosaik Dialog und Kultur e.V.
            </p>
            <p class="mb-2">
              <strong>IBAN:</strong> DE## #### #### #### #### ##
            </p>
            <p class="mb-2"><strong>BIC:</strong> D#######XXX</p>
            <p class="mb-2"><strong>Bank:</strong> Deutsche Bank</p>
            <p><strong>Verwendungszweck:</strong> Spende</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact Section -->
  <section class="py-12 bg-white">
    <div class="w-11/12 md:w-10/12 mx-auto px-0 md:px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Ihre Wirkung</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {
          [
            {
              title: "Sprachkurse",
              description:
                "Ermöglichen Sie Neuankömmlingen den Zugang zu Deutschkursen",
              image: "./dylan-gillis-KdeqA3aTnBY-unsplash.jpg",
            },
            {
              title: "Jugendprogramme",
              description:
                "Unterstützen Sie kulturelle Austauschprogramme für Jugendliche",
              image: "./sincerely-media-dGxOgeXAXm8-unsplash.jpg",
            },
            {
              title: "Integration",
              description:
                "Helfen Sie bei der Integration von Geflüchteten in unsere Gemeinschaft",
              image: "./alexas_fotos-x1CLah6pv6g-unsplash.jpg",
            },
          ].map((item) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
              <img
                src={item.image}
                alt={item.title}
                class="w-full  object-cover"
              />
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2">{item.title}</h3>
                <p class="text-gray-600">{item.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-[#cee2ef] text-gray-800">
    <div class="w-11/12 md:w-10/12 mx-auto px-0 md:px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">
        Ihre Unterstützung macht einen Unterschied!
      </h2>
      <p class="text-xl max-w-2xl mx-auto">
        Jede Spende hilft uns dabei, unsere Programme fortzuführen und noch mehr
        Menschen in unserer Gemeinschaft zu unterstützen.
      </p>
    </div>
  </section>
</MainLayout>
